{
  "name": "aha-ideas-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "gateway",
    "services/*",
    "frontend"
  ],
  "scripts": {
    "install:all": "npm install --workspaces",
    "dev:gateway": "npm --workspace gateway run dev",
    "dev:frontend": "npm --workspace frontend run dev",
    "test": "npm run test --workspaces --if-present"
  }
}
