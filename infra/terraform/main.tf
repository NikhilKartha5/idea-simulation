terraform {
  required_version = ">= 1.6.0"
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
  }
}

provider "aws" {
  region = var.region
}

# Minimal placeholder infrastructure
resource "aws_s3_bucket" "artifact_bucket" {
  bucket = var.artifact_bucket_name
}
